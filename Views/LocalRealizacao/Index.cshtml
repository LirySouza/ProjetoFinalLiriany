@model IEnumerable<ProjetoFinalLiriany.Models.LocalRealizacao>

@{
    ViewData["Title"] = "Index";
}

<h1>Local de Realização</h1>

<p>
    <a asp-action="Create" class=" btn btn-primary">Cadastrar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LocalRealizacaoNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cidade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LocalRealizacaoNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cidade.CidadeNome)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.LocalRealizacaoId" class=" btn btn-primary">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.LocalRealizacaoId" class=" btn btn-primary">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.LocalRealizacaoId" class=" btn btn-secondary">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
