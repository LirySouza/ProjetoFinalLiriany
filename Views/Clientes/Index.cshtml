@model IEnumerable<ProjetoFinalLiriany.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1>Clientes</h1>

<p>
    <a asp-action="Create" class=" btn btn-primary">Cadastrar Novo</a>
</p>
    <div>
        @using (Html.BeginForm("Index", "Clientes", FormMethod.Get))
        {
            <p>
                Digite aqui sua pesquisa: @Html.TextBox("pesquisa")
                <input type="submit" value="Pesquisar" />
            </p>
        }
    </div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClienteNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClienteCpf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClienteSexo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClienteTelefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClienteEndereco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClienteNumero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cidade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClienteNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClienteCpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClienteSexo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClienteTelefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClienteEndereco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClienteNumero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cidade.CidadeNome)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.ClienteId" class=" btn btn-primary">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.ClienteId" class=" btn btn-primary">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.ClienteId" class=" btn btn-secondary">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
